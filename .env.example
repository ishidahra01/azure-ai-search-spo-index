# Azure AI Search
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_API_KEY=your-search-api-key
AZURE_SEARCH_INDEX_NAME=sp-docs

# Azure OpenAI (Optional - for embeddings)
AZURE_OPENAI_ENDPOINT=https://your-openai.openai.azure.com
AZURE_OPENAI_API_KEY=your-openai-api-key
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-large
AZURE_OPENAI_EMBEDDING_MODEL=text-embedding-3-large
AZURE_OPENAI_API_VERSION=2025-04-01-preview

# Azure Document Intelligence (Optional - for high-quality extraction)
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-doc-intel.cognitiveservices.azure.com
AZURE_DOCUMENT_INTELLIGENCE_API_KEY=your-doc-intel-api-key

# Microsoft Graph API (for Pattern A)
GRAPH_TENANT_ID=your-tenant-id
GRAPH_CLIENT_ID=your-client-id
GRAPH_CLIENT_SECRET=your-client-secret

# SharePoint Configuration
SP_HOSTNAME=yourtenant.sharepoint.com
SP_SITE_PATHS=/sites/ai-search-handson
SP_LIBRARY_NAMES=Documents

# Application Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_FILES_TO_PROCESS=100
SUPPORTED_EXTENSIONS=.pdf,.docx,.pptx,.xlsx,.txt

# Delta Sync State Storage
DELTA_TOKEN_FILE=.delta_token.json
